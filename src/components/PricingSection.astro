---
const pricingPlans = [
  {
    name: "Starter",
    price: "49",
    description: "Perfect for individual educators or small classrooms.",
    features: [
      "Up to 30 student accounts",
      "Basic analytics",
      "5 project templates",
      "Community support",
      "Standard content library",
    ],
    cta: "Get Started",
    popular: false
  },
  {
    name: "Professional",
    price: "99",
    description: "Ideal for schools and educational departments.",
    features: [
      "Up to 500 student accounts",
      "Advanced analytics & reporting",
      "15 project templates",
      "Priority email support",
      "Expanded content library",
      "Custom branding",
      "Assessment tools"
    ],
    cta: "Get Started",
    popular: true
  },
  {
    name: "Enterprise",
    price: "Custom",
    periodText: "contact us for pricing", 
    description: "For large institutions and educational platforms.",
    features: [
      "Unlimited student accounts",
      "Enterprise-grade analytics",
      "Unlimited project templates",
      "24/7 dedicated support",
      "Full content library",
      "Custom development",
      "Advanced assessment tools",
      "API access",
      "Single sign-on"
    ],
    cta: "Contact Sales",
    popular: false
  }
];
---

<section id="pricing" class="section-padding bg-slate-50">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-block px-3 py-1 text-sm font-medium bg-secondary-100 text-secondary-800 rounded-full mb-4">
        Pricing Plans
      </span>
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        Find the perfect plan for your educational needs
      </h2>
      <p class="text-lg text-slate-600">
        Whether you're an individual educator or a large institution, we have flexible pricing options to meet your requirements.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {pricingPlans.map((plan, index) => (
        <div class={`card relative ${plan.popular ? 'ring-2 ring-primary-500' : ''}`}>
          {plan.popular && (
            <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 bg-primary-600 text-white px-4 py-1 rounded-full text-sm font-medium">
              Most Popular
            </div>
          )}
          
          <div class="mb-6">
            <h3 class="text-xl font-bold mb-2">{plan.name}</h3>
            <p class="text-slate-600 mb-4">{plan.description}</p>
            
            <div class="flex items-baseline mb-6">
              <span class="text-4xl font-bold">${plan.price}</span>
              {plan.periodText ? (
                <span class="ml-2 text-slate-600">{plan.periodText}</span>
              ) : (
                <span class="ml-2 text-slate-600">/month</span>
              )}
            </div>
          </div>
          
          <ul class="space-y-3 mb-8">
            {plan.features.map((feature) => (
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-success-500 mr-2 flex-shrink-0 mt-0.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>{feature}</span>
              </li>
            ))}
          </ul>
          
          <a 
            href="/contact" 
            class={`w-full text-center py-3 px-4 rounded-lg font-medium transition-colors ${
              plan.popular 
                ? 'bg-primary-600 text-white hover:bg-primary-700' 
                : 'bg-white border-2 border-slate-300 text-slate-700 hover:bg-slate-50'
            }`}
          >
            {plan.cta}
          </a>
        </div>
      ))}
    </div>
    
    <div class="mt-16 bg-white rounded-2xl shadow-soft p-8 md:p-10">
      <div class="md:flex items-center justify-between">
        <div class="mb-6 md:mb-0 md:mr-8">
          <h3 class="text-2xl font-bold mb-2">Need a custom solution?</h3>
          <p class="text-slate-600 max-w-2xl">
            We offer tailored solutions for educational institutions with specific requirements. Contact our sales team to discuss your needs.
          </p>
        </div>
        <a href="/contact" class="btn-primary whitespace-nowrap">Contact Sales</a>
      </div>
    </div>
  </div>
</section>
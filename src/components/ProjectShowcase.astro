---
import { Image } from "astro:assets";
import grayscaleLogo from "../assets/grayscale-differentest-logo.png";

const projects = [
  {
    title: "DifferenTest for Teachers",
    description: "Build lesson plans, generate assessments, and assess student progress.",
    image: "/teacher-experience.mp4",
    category: "Teachers",
  },
  {
    title: "DifferenTest for Students",
    description: "Take assessments, leverage assistive technology, and earn badges and certificates.",
    image: "/student-experience.mp4",
    category: "Students",
  },
  {
    title: "DifferenTest Premium",
    description:
      "For the premium subscriber, we offer enhanced features including credential design, curriculum development, and reports",
    image: "/premium-experience.mp4",
    category: "Premium",
  },
];
---

<section id="featured-project-showcase" class="section-padding bg-slate-50">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span
        class="inline-block px-3 py-1 text-sm font-medium bg-accent-100 text-accent-800 rounded-full mb-4"
      >
        Featured Project
      </span>
      <Image
        src={grayscaleLogo}
        alt="DifferenTest Logo"
        class="h-24 w-auto mx-auto mb-6"
      />
      <p class="text-lg text-slate-600">
        A platform for teachers to create and share a fully automated but
        customizable assessment and credentialing experience with their
        students.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        projects.map((project, index) => (
          <div class="group relative overflow-hidden rounded-xl shadow-soft transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
            <div class="aspect-video overflow-hidden">
              {project.image.endsWith(".mp4") ? (
                <video
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                  autoplay
                  loop
                  muted
                  playsinline
                >
                  <source src={project.image} type="video/mp4" />
                  Your browser does not support the video tag.
                </video>
              ) : (
                <img
                  src={project.image}
                  alt={project.title}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                />
              )}
            </div>
            <div class="bg-white p-6 space-y-2">
              <span class="text-xs font-medium bg-accent-100 text-accent-800 py-1 px-2 rounded inline-block w-fit">
                {project.category}
              </span>
              <h3 class="text-xl font-semibold text-slate-900">
                {project.title}
              </h3>
              <p class="text-slate-600">{project.description}</p>
            </div>
          </div>
        ))
      }
    </div>

    <div class="mt-12 text-center">
      <a href="https://www.differentest.club" class="btn-primary"
        >Visit DifferenTest</a
      >
    </div>
  </div>
</section>

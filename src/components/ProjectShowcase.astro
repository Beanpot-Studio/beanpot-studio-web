---
import { Image } from "astro:assets";
import grayscaleLogo from "../assets/grayscale-differentest-logo.png";
import practiceBuddyLogo from "../assets/grayscale-practicebuddy-logo.png";

const differentestProjects = [
  {
    title: "DifferenTest for Teachers",
    description: "Build lesson plans, generate assessments, and assess student progress.",
    image: "/teacher-experience.mp4",
    category: "Teachers",
  },
  {
    title: "DifferenTest for Students",
    description: "Take assessments, leverage assistive technology, and earn badges and certificates.",
    image: "/student-experience.mp4",
    category: "Students",
  },
  {
    title: "DifferenTest Premium",
    description:
      "For the premium subscriber, we offer enhanced features including credential design, curriculum development, and reports",
    image: "/premium-experience.mp4",
    category: "Premium",
  },
];

const practiceBuddyProjects = [
  {
    title: "Practice Buddy for Teachers",
    description: "Create and manage practice sessions, track student progress, and customize learning paths.",
    image: "/pb-teachers.mp4",
    category: "Teachers",
  },
  {
    title: "Practice Buddy for Students",
    description: "Engage in interactive practice sessions, receive personalized feedback, and improve your skills.",
    image: "/pb-students.mp4",
    category: "Students",
  },
];
---

<section id="featured-project-showcase" class="section-padding bg-slate-50">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span
        class="inline-block px-3 py-1 text-sm font-medium bg-accent-900 text-white rounded-full mb-4"
      >
        Featured Projects
      </span>
      <h2 class="text-3xl md:text-4xl font-bold mb-6 text-slate-900">
        Our <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-secondary-600"
          >Flagship</span
        > Platforms
      </h2>
      <p class="text-lg text-slate-600">
        Discover the innovative educational technology platforms we've built to empower educators and students.
      </p>
    </div>

    {/* DifferenTest Section */}
    <div class="mb-20 border border-slate-300 p-20 rounded-xl">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <Image
          src={grayscaleLogo}
          alt="DifferenTest Logo"
          class="h-20 w-auto mx-auto mb-4"
        />
       
        <p class="text-lg text-slate-600">
          A platform for teachers to create and share a fully automated yet
          customizable assessment and credentialing experience with their
          students.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
        {
          differentestProjects.map((project) => (
            <div class="group relative overflow-hidden rounded-xl shadow-soft transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
              <div class="aspect-video overflow-hidden">
                {project.image.endsWith(".mp4") ? (
                  <video
                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                    autoplay
                    loop
                    muted
                    playsinline
                  >
                    <source src={project.image} type="video/mp4" />
                    Your browser does not support the video tag.
                  </video>
                ) : (
                  <img
                    src={project.image}
                    alt={project.title}
                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                  />
                )}
              </div>
              <div class="bg-white p-6 space-y-2">
                <span class="text-xs font-medium bg-accent-100 text-accent-800 py-1 px-2 rounded inline-block w-fit">
                  {project.category}
                </span>
                <h4 class="text-xl font-semibold text-slate-900">
                  {project.title}
                </h4>
                <p class="text-slate-600">{project.description}</p>
              </div>
            </div>
          ))
        }
      </div>

      <div class="text-center">
        <a href="https://www.differentest.club" class="btn-secondary"
          >Visit DifferenTest</a
        >
      </div>
    </div>

    {/* Practice Buddy Section */}
    <div class="mb-20 border border-slate-300 p-20 rounded-xl">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <Image
          src={practiceBuddyLogo}
          alt="Practice Buddy Logo"
          class="h-20 w-auto mx-auto mb-4"
        />
        <p class="text-lg text-slate-600">
          An interactive platform designed to enhance learning through practice and personalized feedback for both educators and students.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {
          practiceBuddyProjects.map((project) => (
            <div class="group relative overflow-hidden rounded-xl shadow-soft transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
              <div class="aspect-video overflow-hidden">
                {project.image.endsWith(".mp4") ? (
                  <video
                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                    autoplay
                    loop
                    muted
                    playsinline
                  >
                    <source src={project.image} type="video/mp4" />
                    Your browser does not support the video tag.
                  </video>
                ) : (
                  <img
                    src={project.image}
                    alt={project.title}
                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                  />
                )}
              </div>
              <div class="bg-white p-6 space-y-2">
                <span class="text-xs font-medium bg-accent-100 text-accent-800 py-1 px-2 rounded inline-block w-fit">
                  {project.category}
                </span>
                <h4 class="text-xl font-semibold text-slate-900">
                  {project.title}
                </h4>
                <p class="text-slate-600">{project.description}</p>
              </div>
            </div>
          ))
        }
      </div>
      <div class="text-center mt-10">
        <a href="https://www.practicebuddy.club" class="btn-secondary"
          >Visit Practice Buddy</a
        >
      </div>
    
    </div>
   
  </div>
</section>

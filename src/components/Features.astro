<section id="features-section" class="section-padding relative overflow-hidden">
  {/* Beans Background Image */}
  <img
    src="/beans.jpg"
    alt="Background beans"
    class="absolute inset-0 w-full h-full object-cover z-0"
  />
  {/* Overlay for Contrast */}
  <div class="absolute inset-0 z-10 bg-accent-900/90"></div>

  {/* Original Content - ensure it's on top */}
  <div class="container-custom relative z-20">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span
        class="inline-block px-3 py-1 text-sm font-medium bg-secondary-100 text-secondary-800 rounded-full mb-4"
      >
        Powerful Features
      </span>
      <h2 class="text-3xl md:text-4xl font-bold mb-6 text-primary-100">
        Experience <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-primary-300 to-secondary-500"
          >exceptional</span
        > educational apps
      </h2>
      <p class="text-lg text-slate-100">
        Our studio provides all the tools and features you need to create
        engaging, interactive educational experiences for learners of all ages.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        features.map((feature) => (
          <div class="card card-hover group">
            <div
              class={`w-12 h-12 rounded-lg bg-${feature.color}-900 flex 
                items-center justify-center mb-5 text-${feature.color}-100 
                transition-colors`}
              set:html={feature.icon}
            />
            <h3 class="text-xl font-semibold mb-3">{feature.title}</h3>
            <p class="text-slate-600">{feature.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
